<!doctype html>
<html lang="en">

<head>
    <title>
        <%=title%>
    </title>
    <link rel="stylesheet" href="/mystyle.css">
    <link rel="shortcut icon" href="<%=applogo%>">
    <link rel="stylesheet" href="/bootstrap.min.css">
    <link rel="stylesheet" href="/all.min.css">
    <link rel="stylesheet" href="/sidebar.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="/jquery.min.js"></script>
    <script src="/bootstrap.min.js"></script>
    <script src="/popper.min.js"></script>
    <script src="/Sidebar.js"></script>
    <script src="/myFunctions.js"></script>


    <script>
        $(document).ready(function () {
            $(".afterGettingCat").hide();
            $("#productname").keyup(function () {
                var slug = removeSpaces($(this).val());
                $("#productslug").val(slug);
            });
            $('.selectCategory').click(function(){
                $(".message").html("<p>Fetching all Subcategories..</p>");
                var catid = $(this).attr('catid');
                $.post("/api/subcatbycatid", {catid: catid}, function(s){
                    console.log(s);
                    $("#SubCatid").html("<option value=''>Select</option>");
                    if(s.subcats == false){
                        $(".message").html("<p>Please Select another Category, This Category have no sub category.</p>");
                        //alert("Please Select another Category, This Category have no sub category.");
                    }else{
                        $(".message").html("");
                        $(".afterGettingCat").show();
                        for(j = 0; j < s.subcats.length; j++){
                        $("#SubCatid").append("<option value='"+s.subcats[j]._id+"'>"+s.subcats[j].name+"</option>");
                    }
                    }
                    
                });
                
            });
        });
    </script>

</head>

<body class="main_color">
    <nav class="navbar navbar-expand-lg navbar-light navigation fixed-top">
        <a class="navbar-brand" href="/">
            <img style="height: 30px; width: 50px;" src="<%=applogo%>">
            <%-appname%>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">


            <ul class="navbar-nav mr-auto">
                <% for(let i = 0; i < nav.length; i++){ %>
                <% if (nav[i].position === 'left') { %>
                <% if (nav[i].type == 'link') { %>
                <li class="nav-item">
                    <a class="nav-link" href="<%=nav[i].url%>">
                        <%-nav[i].name%>
                    </a>
                </li>
                <% } %>
                <% if (nav[i].type == 'dropdown') { %>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        <%=nav[i].name%>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <%for(let j = 0; j < nav[i].details.length; j++){%>
                        <a class="dropdown-item" href="<%=nav[i].details[j].url%>">
                            <%=nav[i].details[j].name%>
                        </a>
                        <%}%>
                    </div>
                </li>
                <% } %>
                <% } %>
                <% } %>
            </ul>
            <ul class="navbar-nav ml-auto">
                <% for(let i = 0; i < nav.length; i++){ %>
                <% if (nav[i].position === 'right') { %>
                <% if (nav[i].type == 'link') { %>
                <li class="nav-item">
                    <a class="nav-link" href="<%=nav[i].url%>">
                        <%-nav[i].name%>
                    </a>
                </li>
                <% } %>
                <% if (nav[i].type == 'dropdown') { %>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        <%=nav[i].name%>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <%for(let j = 0; j < nav[i].details.length; j++){%>
                        <a class="dropdown-item" href="<%=nav[i].details[j].url%>">
                            <%=nav[i].details[j].name%>
                        </a>
                        <%}%>
                    </div>
                </li>
                <% } %>
                <% } %>
                <% } %>
            </ul>


        </div>
    </nav>

    <div class="container bg-white" style="padding-top: 65px;">
        <br>
        <div class="row">
            <div class="col-md-3">
                <div class="panel">
                    <h4>Search</h4>
                    <label class="sr-only" for="inlineFormInputGroup"></label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                        <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Type & Press Enter">
                    </div>
                </div>
            </div>
            <div class="col-md-9">

                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <% if((typeof Superbar !== 'undefined' && Superbar !== false) || (typeof adminbar !== 'undefined' && adminbar !== false)){ %>

                    <a href="#" class="navbar-brand" style="color: #01579B;" onclick="$('.aside').asidebar('open')">
                        <i class="fas fa-lock"></i>
                    </a>

                    <% } %>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar2"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbar2">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a href="/Dashboard" class="nav-link">
                                    Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link cursor-pointer" data-toggle="collapse" data-target="#addSubCategory"
                                    aria-expanded="false">
                                    Add Product
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
                <br>
                <h4>Products</h4>

                <br>
                <form method="post" action="/Admin/Shop/Products" id="addSubCategory" class="collapse">

                    <br>
                    <br>
                    <div class="row">
                        <div class="col">
                            <small id="passwordHelpBlock" class="form-text text-muted">
                                Slug is the string that will be shown in address bar, Write the name of Product first,
                                then slug will be generated automatically but if that slug exists you can change it
                                manually too.
                            </small>
                            <small>Please select the Category in which you want to put this product.</small>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="widget">
                                <div class="widget-inside" style="height: 200px;">
                                    <%for(i = 0; i < categories.length; i++){%>
                                    <a class="SelectorActiveInactive selectCategory" catid="<%=categories[i]._id%>">
                                        <%=categories[i].name%></a>
                                    <%}%>
                                </div>
                            </div>

                        </div>
                        <div class="col-md-8">
                            <div class="message">
                                <p>Select the category from here</p>
                            </div>
                            <div class="afterGettingCat">
                                <div class="row ">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="productname">Name</label>
                                            <input type="text" require class="form-control" name="name" id="productname">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="productPrice">Price</label>
                                            <input type="number" require class="form-control" name="price" id="subcatname">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="productslug">Slug</label>
                                            <input type="text" require class="form-control" name="slug" id="productslug">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="my-1 mr-2" for="subcatid">Sub Category</label>
                                        <select required class="custom-select my-1 mr-sm-2" name="subcatid" id="SubCatid">
                                            <option value="">Select</option>
                                            <option value="">Please Select the Category First..</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="description">Description</label>
                                            <textarea class="form-control" id="description" name="description"></textarea>
                                        </div>
                                        <input type="submit" class="btn btn-primary" value="Save">
                                        <a href="#" class="btn btn-danger cursor-pointer" data-toggle="collapse"
                                            data-target="#addCategory" aria-expanded="false">
                                            Cancel
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <hr>
                </form>
                <div class="all-categories">
                    <%for(i = 0; i < products.length; i++){%>
                    <div class="single-category" style="margin-bottom: 5px; padding-bottom: 10px; border-bottom: 1px solid #ccc;">

                        <p>
                            <B>
                                <%=products[i].name%>
                            </B> [
                            <%=products[i].slug%> ]
                            <br>
                            <B>Status: </B>
                             <%if(products[i].status == false){%> <span>Turned Off</span>
                            <%} else { %> <span>Turned On</span>
                            <% } %>
                            <br>
                            <%=products[i].details%>
                        </p>

                        <form method="post" action="/Admin/Shop/Product/Delete">
                            <input type="hidden" name="productid" value="<%=products[i]._id%>">
                            <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                        </form>
                    </div>

                    <% } %>
                </div>
            </div>

        </div>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="container">
        <div class="row" style="padding-top: 20px;">
            <div class="col-md-4">
                <a href="#" class="link-block">Help Center</a>
                <a href="#" class="link-block">privacy policies</a>
                <a href="#" class="link-block">Terms and conditions</a>
            </div>
            <div class="col-md-4">
                <a href="#" class="link-block">Careers</a>
                <a href="#" class="link-block">Track Your Order</a>
                <a href="#" class="link-block">Return and Refund Policies</a>

            </div>
            <div class="col-md-4">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Your Email Address" aria-label="Recipient's username"
                        aria-describedby="button-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-primary">Subscribe</button>
                    </div>
                </div>
                <p class="text-justify link-block">House # 21, Madni Mohalla Rawalpindi, Pakistan.</p>
            </div>
        </div>
        <div class="row" style="padding: 30px 0px;">
            <div class="col-md-6">
                <p>copyrights reserved &copy; 2018</p>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h3>Categories</h3>
                    <a class="btn btn-danger" data-dismiss="modal">Close</a>
                </div>
            </div>
        </div>
    </div>






    <div class="aside">
        <div class="widget">
            <div class="widget-inside">
                <div class="aside-header">
                    Administrator
                    <span class="close" data-dismiss="aside" aria-hidden="true">&times;</span>
                </div>
                <div class="aside-contents">
                    <% if(typeof Superbar !== 'undefined'){ %>
                    <ul class="list-group list-group-flush">
                        <% for(k = 0; k < Superbar.length; k++){ %>
                        <%if(Superbar[k].type == 'link'){%>
